<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
        id="com.checkroom.plugin.hud"
        version="0.4.3">

    <name>HUDPlugin</name>
	
    <description>Cordova HUD Plugin for iOS and Android</description>
	
    <license>MIT</license>
	
    <keywords>cordova,hud,dialog,loading,ios,ios7,ios8,android</keywords>

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="HUDPlugin">
                <param name="android-package" value="com.checkroom.plugin.hud.HUDPlugin"/>
            </feature>
        </config-file>
        
        <js-module src="www/android/HUDPlugin.js" name="HUDPlugin">
            <clobbers target="hudPlugin" />
        </js-module>
    
        <source-file src="src/android/HUDPlugin.java" target-dir="src/com/checkroom/plugin/hud" />
        <source-file src="src/android/HUDDialog.java" target-dir="src/com/checkroom/plugin/hud" />

        <source-file src="src/android/res/layout/dialog_hud.xml" target-dir="res/layout" />
        <source-file src="src/android/res/drawable-ldpi/success.png" target-dir="res/drawable-ldpi" />
        <source-file src="src/android/res/drawable-ldpi/error.png" target-dir="res/drawable-ldpi" />
        <source-file src="src/android/res/drawable-mdpi/success.png" target-dir="res/drawable-mdpi" />
        <source-file src="src/android/res/drawable-mdpi/error.png" target-dir="res/drawable-mdpi" />
        <source-file src="src/android/res/drawable-hdpi/success.png" target-dir="res/drawable-hdpi" />
        <source-file src="src/android/res/drawable-hdpi/error.png" target-dir="res/drawable-hdpi" />        
        <source-file src="src/android/res/drawable-xhdpi/success.png" target-dir="res/drawable-xhdpi" />
        <source-file src="src/android/res/drawable-xhdpi/error.png" target-dir="res/drawable-xhdpi" />        
        <source-file src="src/android/res/drawable-xxhdpi/success.png" target-dir="res/drawable-xxhdpi" />
        <source-file src="src/android/res/drawable-xxhdpi/error.png" target-dir="res/drawable-xxhdpi" />        
        <source-file src="src/android/res/drawable-xxxhdpi/success.png" target-dir="res/drawable-xxxhdpi" />
        <source-file src="src/android/res/drawable-xxxhdpi/error.png" target-dir="res/drawable-xxxhdpi" />
    </platform>
    <!-- ios -->
    <platform name="ios">

        <config-file target="config.xml" parent="/*">
		<feature name="HUDPlugin">
			<param name="ios-package" value="HUDPlugin"/>
		</feature>
        </config-file>

        <js-module src="www/ios/HUDPlugin.js" name="HUDPlugin">
            <clobbers target="hudPlugin" />
        </js-module>

	    <header-file src="src/ios/HUDPlugin.h" />
	    <source-file src="src/ios/HUDPlugin.m" />
        <header-file src="src/ios/MBProgressHUD.h" />
        <source-file src="src/ios/MBProgressHUD.m" />

    </platform>

</plugin>
